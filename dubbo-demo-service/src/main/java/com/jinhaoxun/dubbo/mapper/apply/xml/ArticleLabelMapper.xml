<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jinhaoxun.dubbo.mapper.apply.ArticleLabelMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.jinhaoxun.dubbo.po.apply.ArticleLabel">
        <id column="LABEL_ID" property="labelId" />
        <result column="ARTICLE_ID" property="articleId" />
        <result column="PRIMARY_CODE" property="primaryCode" />
        <result column="SECONDARY_CODE" property="secondaryCode" />
        <result column="CREATE_TIME" property="createTime" />
        <result column="UPDATE_TIME" property="updateTime" />
        <result column="UPDATER_ID" property="updaterId" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        LABEL_ID, ARTICLE_ID, PRIMARY_CODE, SECONDARY_CODE, CREATE_TIME, UPDATE_TIME, UPDATER_ID
    </sql>

    <delete id="deleteLabelByArticleId" parameterType="Long">
        DELETE
        FROM ARTICLE_LABEL
        WHERE ARTICLE_ID = #{articleId}
    </delete>

    <select id="getLabelByArticleId" parameterType="Long" resultMap="BaseResultMap">
        SELECT *
        FROM ARTICLE_LABEL
        WHERE ARTICLE_ID = #{articleId}
    </select>

</mapper>
